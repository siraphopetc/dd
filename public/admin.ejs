<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Table with Edit/Delete</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script> <!-- For 3-dot icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <style>
        .dropdown-toggle::after {
            display: none !important;
        }
        .table-responsive {
            margin-top: 20px;
        }
        .dropdown-menu {
            min-width: 100px; /* Ensure itâ€™s visible enough */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mt-4">
            <h2>Data Table</h2>
           <a href="/pr/a2cc66b5b217d7cb70fc121cfea168ac179aa7c8/f994686e1aad5f0388d1b278fc20406d/2a99922bd3fcc215a7b3fcbd9667338a">
            <button type="button" class="btn btn-primary">New</button>
           </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Path</th>
                        <th>Title</th>
                        <th>Redirect URL</th>
                        <th>Keyword</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach((value, key) => {%> 
                        <tr>
                            <td><a href="<%= value['page'] %>" target="_blank">
                                <%= value['page'] %>
                            </a></td>
                            <td> <%= value['title'] %></td>
                            <td> <a href="<%= value["redirect"] %>">
                                <%= value['redirect'] %>
                            </a></td>
                            <td><%= value["keyword"] %></td>
                            <td><%= value["description"] %></td>
                            <td>
                                <div class="dropdown">
                                    <a class="btn btn-link text-dark dropdown-toggle" href="#" role="button" id="dropdownMenuLink2" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuLink2">
                                        <li><a class="dropdown-item" href="/pr/a2cc66b5b217d7cb70fc121cfea168ac179aa7c8/f994686e1aad5f0388d1b278fc20406d/<%= value['id'] %>/de95b43bceeb4b998aed4aed5cef1ae7">Edit</a></li>
                                        <li><a class="dropdown-item" href="/pr/a2cc66b5b217d7cb70fc121cfea168ac179aa7c8/f994686e1aad5f0388d1b278fc20406d/<%= value['id'] %>/099af53f601532dbd31e0ea99ffdeb64">Delete</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>    
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
